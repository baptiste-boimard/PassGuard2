<MudDialog>
    <DialogContent>Confirmez votre mot de passe</DialogContent>
    <DialogContent>
        <MudText>Attention, 3 échecs provoquera un blocage de 30s</MudText>
        <MudTextField @bind-Value="PasswordInput" Label="Mot de passe" InputType="InputType.Password" Immediate="true"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    private string PasswordInput { get; set; } = string.Empty;

    private void Submit() => MudDialog?.Close(DialogResult.Ok(PasswordInput));
    private void Cancel() => MudDialog?.Close();
}

